#include <cstdio>
#include <stack>
typedef long long ll;
using namespace std;

int main() {
	while (true) {
		int n, i, input;
		ll area = 0, max_Area = -1;
		ll height, width;
		stack<pair<ll, int>> st;
		scanf("%d", &n);
		if (!n) return 0;
		for (i = 0; i < n; i++) {
			scanf("%d", &input);
			if(!i)
				st.push(make_pair(input, i));
			while (!st.empty() && st.top().first > input) {
				height = st.top().first;
				st.pop();
				width = i;
				if (!st.empty())
					width = i - st.top().second - 1;
				area = height * width;
				if (max_Area < area)
					max_Area = area;
			}
			st.push(make_pair(input, i));
		}
		while (!st.empty()) {
			height = st.top().first;
			st.pop();
			width = n;
			if (!st.empty())
				width = n - st.top().second - 1;
			area = height * width;
			if (max_Area < area)
				max_Area = area;
		}
		printf("%lld\n", max_Area);
	}
	return 0;
}
